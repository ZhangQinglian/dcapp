<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zqlite.android.diycode">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".device.view.DCApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.zqlite.android.diycode.device.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.zqlite.android.diycode.device.view.topicdetial.TopicDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/SlideStyle"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"/>

        <activity
            android:name="com.zqlite.android.diycode.device.view.userdetail.UserDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/SlideStyle"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"/>

        <activity
            android:name="com.zqlite.android.diycode.device.view.login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/SlideStyle"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"/>
        <activity
            android:name="com.zqlite.android.diycode.device.view.custom.ImageViewerActivity"
            android:label="@string/app_name"
            android:theme="@style/SlideStyle"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"/>
        <activity
            android:name="com.zqlite.android.diycode.device.view.favorite.FavoriteActivity"
            android:label="@string/app_name"
            android:theme="@style/SlideStyle"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"/>

        <activity
            android:name="com.zqlite.android.diycode.device.view.follow.FollowAvtivity"
            android:label="@string/app_name"
            android:theme="@style/SlideStyle"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"/>

        <activity
            android:name="com.zqlite.android.diycode.device.view.about.AboutActivity"
            android:label="@string/app_name"
            android:theme="@style/SlideStyle"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"/>
    </application>

</manifest>